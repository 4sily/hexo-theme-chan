.article {
  .article-header {
    margin-bottom: 10px;
    a {
      color: #30634C;
      &:hover {
        color: #388151;
      }
    }
  }
  .article-info {
    font-size: 14px;
    color: gray;
    .article-tag,
    .article-category {
      ul, li {
        display: inline;
        padding: 0;
        margin: 0 3px;
        a {
          color: gray;
          &:hover {
            color: color-link-hover;
          }
        }
      }
    }
  }
  .article-entry {
    font-size: 16px;
  }
  img,
  .highlight {
    max-width: 100%;
  }
  .article-footer {
    margin-top: 30px;
  }
}
