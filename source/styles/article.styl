.article {
  .article-header {
    margin-bottom: 10px;
    a {
      color: #30634C;
      &:hover {
        color: #388151;
      }
    }
  }
  .article-info {
    font-size: 14px;
    color: gray;
    .article-date {
      margin-right: 0.5em;
    }
    .article-tag,
    .article-category {
      ul {
        display: inline;
        padding: 0;
        margin: 0 -1px;
      }
      li {
        display: inline;
        padding: 0;
      }
      a {
        margin: 0 3px;
      }
      .article-tag-list-item a {
        color: gray;
        &:hover {
          color: color-link-hover;
        }
      }
    }
  }
  .article-entry {
    font-size: 16px;
    line-height: line-height;

    blockquote {
      background:#f9f9f9;
      border-left: 5px solid lightgray;
      margin: 1.5em 0px;
      padding: .5em 2em;
      font-family: font-serif;
      font-size: 0.9em;
    }
  }
  img{
    max-width: 100%;
  }
  .article-footer {
    margin-top: 30px;
  }
}

@media mq-mobile {
  .highlight {
    max-width: 100%;
    margin: 0 !important;
  }
}
